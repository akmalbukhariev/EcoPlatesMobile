<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="EcoPlatesMobile.AppCompanyShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:EcoPlatesMobile"
       xmlns:companyPages="clr-namespace:EcoPlatesMobile.Views.Company.Pages"
       Shell.FlyoutBehavior="Disabled"
       Shell.TabBarUnselectedColor="Gray"
       Shell.TabBarForegroundColor="#8338EC">
 
    <TabBar>
         <Tab Icon="home1.png">
            <ShellContent ContentTemplate="{DataTemplate companyPages:ActiveProductPage}"
                          Shell.NavBarIsVisible="False"/>
        </Tab>
        <Tab Icon="active_product.png">
            <ShellContent ContentTemplate="{DataTemplate companyPages:NonActiveItemPage}"
                          Shell.NavBarIsVisible="False"/>
        </Tab>
        <Tab Icon="company.png">
            <ShellContent ContentTemplate="{DataTemplate companyPages:CompanyPrifilePage}"
                          Shell.NavBarIsVisible="False"/>
        </Tab>
    </TabBar>
    
</Shell>
