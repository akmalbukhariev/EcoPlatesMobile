<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="EcoPlatesMobile.Views.LoginPage"
               xmlns:page="clr-namespace:EcoPlatesMobile.Views"
               xmlns:language="clr-namespace:EcoPlatesMobile.Resources.Languages"
               xmlns:loading="clr-namespace:EcoPlatesMobile.Views.Components"
               BackgroundColor="White">

    <Grid>
        <Grid RowDefinitions="*,100, 20, 80, Auto, 10, Auto"
              VerticalOptions="Center"
              Margin="36,0,36,0">
            <Image x:Name="imLogo"
                      Source="logo1.png"
                      WidthRequest="200"
                      HeightRequest="200" 
                      HorizontalOptions="Center"
                      VerticalOptions="Center"/>
            <StackLayout WidthRequest="250"
                        HorizontalOptions="Center"
                        Grid.Row="2">
                <Label Text="{x:Static language:AppResource.SelectRole}"
                       FontFamily="RobotoVar"
                       FontSize="15"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>
            </StackLayout>
            <!-- Buyer -->
            <Border Grid.Row="4"
                    HeightRequest="50"
                    StrokeShape="RoundRectangle 0">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#009688" Offset="0.0" />
                        <GradientStop Color="#4CAF50" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>

                <Button x:Name="btnUser"
                        Text="{x:Static language:AppResource.Buyer}"
                        Style="{StaticResource StyleBigButton}"
                        BackgroundColor="Transparent"
                        CornerRadius="0"
                        Clicked="Button_Clicked" />
            </Border>

            <!-- Seller -->
            <Border Grid.Row="6"
                    HeightRequest="50"
                    Margin="0,10,0,0"
                    StrokeShape="RoundRectangle 0">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="{StaticResource Company}" Offset="0.0" />
                        <GradientStop Color="#B983FF" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>

                <Button x:Name="btnComapny"
                        Text="{x:Static language:AppResource.Seller}"
                        Style="{StaticResource StyleBigButton}"
                        BackgroundColor="Transparent"
                        CornerRadius="0"
                        Clicked="Button_Clicked" />
            </Border>

        </Grid>
        <loading:LoadingView x:Name="loading"
                             ShowLoading="False"/>
    </Grid>
</page:BasePage>