                           WidthRequest="200"
                           HeightRequest="200" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           PaintSurface="OnCanvasViewPaintSurface"/>
        <StackLayout WidthRequest="250" 
                     HorizontalOptions="Center"
                     Grid.Row="2">
            <Label Text="Foydalanuvchi sifatida oâ€™zingizni rolingizni tanlang"
                   TextColor="Gray"
