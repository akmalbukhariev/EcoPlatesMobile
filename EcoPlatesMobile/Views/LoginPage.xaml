        <Button Text="Sotuvchi"
                HeightRequest="50"
                CornerRadius="0"
                VerticalOptions="End"
                Grid.Row="4">
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#A100F2" Offset="0.0"/>
                    <GradientStop Color="#F400A1" Offset="1.0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Text="Xaridor"
                HeightRequest="50"
                CornerRadius="0"
