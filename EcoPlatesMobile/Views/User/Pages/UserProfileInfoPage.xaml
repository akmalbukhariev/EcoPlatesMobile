<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="EcoPlatesMobile.Views.User.Pages.UserProfileInfoPage"
               xmlns:component="clr-namespace:EcoPlatesMobile.Views.Components"
               xmlns:page="clr-namespace:EcoPlatesMobile.Views">

    <Grid>
        <ScrollView>
            <Grid RowDefinitions="Auto, *, Auto, 20"
                  BackgroundColor="#EFEEF2">
                <VerticalStackLayout Spacing="20">
                    <Border x:Name="borderUserImage"
                            WidthRequest="150"
                            HeightRequest="150"
                            Stroke="Gray"
                            StrokeThickness="0.2"
                            Margin="0, 10, 0, 0"
                            StrokeShape="RoundRectangle 100"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                                  Tapped="BorderImage_Tapped"/>
                        </Border.GestureRecognizers>
                        <Image x:Name="imUser" 
                               Source="add_item.png"
                               Aspect="AspectFill" />
                    </Border>
                    <Button Text="Set New Photo"
                            TextColor="Green"
                            FontSize="17"
                            FontAttributes="Bold"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            Clicked="ChangeImage_Clicked"/>
                    <Border StrokeShape="RoundRectangle 15"
                            StrokeThickness="0.2"
                            BackgroundColor="White"
                            Margin="10,0,10,0">
                        <Grid RowDefinitions="Auto, 1, Auto, 10"
                              RowSpacing="10"
                              Margin="10">
                            <Entry x:Name="entryUserName" 
                                   Placeholder="User name"
                                   FontSize="17"
                                   PlaceholderColor="LightGray"/>
                            <BoxView BackgroundColor="LightGray" Grid.Row="1"/>
                            <Grid x:Name="grdPhoneNumber" 
                                  ColumnDefinitions="Auto, *, Auto" 
                                  Grid.Row="2">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1"
                                                          Tapped="PhoneNumber_Tapped"/>
                                </Grid.GestureRecognizers>
                                <Label Text="Change Number"
                                       TextColor="Black"
                                       FontSize="17"
                                       HorizontalTextAlignment="Start"
                                       VerticalTextAlignment="Center"/>
                                <Label x:Name="lbPhoneNumber" 
                                       Text="+998 00 000 00 00"
                                       TextColor="Gray"
                                       FontSize="17"
                                       HorizontalTextAlignment="End"
                                       VerticalTextAlignment="Center"
                                       Grid.Column="1"/>
                                <Image Source="right.png"
                                       Aspect="AspectFit"
                                       Margin="15,0,10,0"
                                       Grid.Column="2"/>
                            </Grid>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
                <Button Text="Log Out" 
                        BackgroundColor="Red"
                        TextColor="White"
                        Margin="10,0,10,0"
                        Clicked="ButtonLogOut_Clicked"
                        Grid.Row="2"/>
            </Grid>
        </ScrollView>
        <Grid ColumnDefinitions="Auto, *, Auto"
              VerticalOptions="Start">
            <Button Text="Cancel"
                    TextColor="Green"
                    FontSize="17"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    Clicked="Cancel_Clicked"/>
            <Button Text="Done"
                    TextColor="Green"
                    FontSize="17"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    Clicked="Done_Clicked"
                    Grid.Column="2"/>
        </Grid>
        <BoxView x:Name="boxFullImage"
                 BackgroundColor="Black"
                 IsVisible="False"
                 Opacity="0.7"/>
        <Image x:Name="fullImage"
               Aspect="AspectFit"
               IsVisible="False">
            <Image.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Up"
                                        Swiped="OnImage_Swiped"/>
                <TapGestureRecognizer NumberOfTapsRequired="1"
                                      Tapped="OnImage_Tapped"/>
            </Image.GestureRecognizers>
        </Image>
        <component:LoadingView x:Name="loading"/>
    </Grid>
</page:BasePage>