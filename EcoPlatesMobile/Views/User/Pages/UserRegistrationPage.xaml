<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.User.Pages.UserRegistrationPage"
             Title="UserRegistrationPage">
    <Grid RowDefinitions="Auto, *">
        <Grid 
            BackgroundColor="#007200"
            HeightRequest="87"
            ColumnDefinitions="Auto,*">
                <Image 
                    Source="back.png"
                    WidthRequest="30"
                    HeightRequest="30"
                    Margin="6, 4.44, 0, 0"/>
                <Label 
                    Text="Shaxsni ro‘yxatga olish"
                    FontFamily="Roboto"
                    TextColor="White"
                    FontSize="25"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>
        </Grid>
        <Grid 
            RowDefinitions="Auto, *, Auto, 40"
            Margin="16, 30, 16, 0"
            Grid.Row="1">
            <StackLayout Spacing="10">
                <Border 
                    x:Name="BorderContainer"
                    StrokeThickness="2"
                    Stroke="LightGray"
                    BackgroundColor="White"
                    Padding="8"
                    HeightRequest="60">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="35"/>
                    </Border.StrokeShape>

                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
 
                        <Image 
                            x:Name="IconImage"
                            Source="user_name.png"
                            WidthRequest="25"
                            HeightRequest="25"
                            VerticalOptions="Center"
                            Margin="8,0"/>
                    
                        <Entry 
                            x:Name="CustomEntry"
                            Placeholder="Ism sharifingiz"
                            FontSize="16"
                            VerticalOptions="Center"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            Grid.Column="1"/>
                    </Grid>
                </Border>

                <Border 
                    HeightRequest="46"
                    Background="Grey"/>
                <Border 
                    HeightRequest="46"
                    Background="Grey"/>
            </StackLayout>
            <Button 
                Text="Ro‘yxatdan o‘tish"
                BackgroundColor="#DCE0E2"
                CornerRadius="30"
                TextColor="#525B5D"
                FontFamily="Roboto"
                HeightRequest="50"
                Grid.Row="2"/>
        </Grid>
    </Grid>
</ContentPage>