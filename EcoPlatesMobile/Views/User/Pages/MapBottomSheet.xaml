<?xml version="1.0" encoding="utf-8" ?>
<the49:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:language="clr-namespace:EcoPlatesMobile.Resources.Languages"
                   x:Class="EcoPlatesMobile.Views.User.Pages.MapBottomSheet"
                   xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
                   BackgroundColor="Transparent">

    <Border BackgroundColor="White" HeightRequest="150">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="25,25,0,0" />
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="5"
                             Margin="20,0,20,0">
            <Border BackgroundColor="LightGray"
                    Margin="0,5,0,0"
                    HeightRequest="4"
                    WidthRequest="60"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
            </Border>
            <Label Text="{x:Static language:AppResource.SelectDistance}"
                   FontSize="16"
                   FontFamily="Roboto"
                   HorizontalOptions="Center"
                   Margin="0,5,0,0"/>
            <Grid ColumnDefinitions="*, Auto"
                  Padding="0"
                  Margin="0"
                  VerticalOptions="Center">
                <Slider x:Name="distanceSlider"
                        Minimum="1"
                        Maximum="10"
                        ThumbColor="{StaticResource User}"
                        MinimumTrackColor="{StaticResource User}"
                        MaximumTrackColor="Black"
                        Value="5"
                        ValueChanged="DistanceSlider_ValueChanged"
                        VerticalOptions="Center"
                        HorizontalOptions="FillAndExpand" />
                <Label x:Name="distanceLabel"
                       Text="5 km"
                       FontSize="16"
                       FontFamily="Roboto"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       Margin="10,0,10,0"
                       Grid.Column="1"/>
            </Grid>
            <Button Text="{x:Static language:AppResource.ShowResult}"
                    BackgroundColor="#004d40"
                    Style="{StaticResource StyleBigButton}"
                    Margin="0,5,0,0"
                    CornerRadius="25"
                    HeightRequest="45"
                    Clicked="ShowResults_Clicked"/>
        </VerticalStackLayout>
    </Border>
    
</the49:BottomSheet>