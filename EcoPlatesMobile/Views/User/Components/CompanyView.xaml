<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.User.Components.CompanyView">
        
        <Frame Padding="0" Margin="10" CornerRadius="15" HasShadow="True">
    <VerticalStackLayout>

        <!-- Image with Overlay -->
        <Grid>
            <Image Source="{Binding ImageUrl}" HeightRequest="180" Aspect="AspectFill" />

            <!-- Store Icon & Name Overlay -->
            <HorizontalStackLayout VerticalOptions="Start" Padding="10" BackgroundColor="Black" Opacity="0.6">
                <Image Source="cart_icon.png" WidthRequest="30" HeightRequest="30"/>
                <Label Text="{Binding StoreName}" TextColor="White" FontSize="16" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <!-- Favorite (Heart) Icon -->
            <Image Source="heart_icon.png"
                   WidthRequest="30"
                   HeightRequest="30"
                   VerticalOptions="Start"
                   HorizontalOptions="End"
                   Margin="10"/>
        </Grid>

        <!-- Store Info -->
        <VerticalStackLayout Padding="10">
            <Label Text="{Binding StoreName}" FontSize="18" FontAttributes="Bold"/>
            <Label Text="{Binding CollectionTime}" FontSize="14" TextColor="Gray"/>
        </VerticalStackLayout>

        <!-- Rating, Distance, Expiry -->
        <HorizontalStackLayout Padding="10">
            <HorizontalStackLayout>
                <Image Source="star_icon.png" WidthRequest="16" HeightRequest="16"/>
                <Label Text="{Binding Rating}" FontSize="14"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Image Source="location_icon.png" WidthRequest="16" HeightRequest="16"/>
                <Label Text="{Binding Distance}" FontSize="14"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Image Source="time_icon.png" WidthRequest="16" HeightRequest="16"/>
                <Label Text="{Binding Expiry}" FontSize="14"/>
            </HorizontalStackLayout>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</Frame>
 
</ContentView>
