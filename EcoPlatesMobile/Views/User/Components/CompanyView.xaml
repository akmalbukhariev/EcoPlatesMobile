<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.User.Components.CompanyView">

    <Frame x:Name="mainFrame" 
           Margin="0, 10, 0, 10"
           Padding="0"
           CornerRadius="15" 
           HeightRequest="215"
           HasShadow="True">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="Company_Tapped" 
                                  NumberOfTapsRequired="1"/>
        </Frame.GestureRecognizers>
        <Grid RowDefinitions="Auto, 50, 40">
            <Grid RowDefinitions="30, Auto">
                <Image x:Name="companyImage"
                       Source="{Binding CompanyImage}"
                       HeightRequest="110" 
                       Aspect="AspectFill"
                       VerticalOptions="Start"
                       Grid.RowSpan="2"/>
                <Image x:Name="imLiked"  
                       Source="like.png"
                       WidthRequest="35"
                       HeightRequest="35"
                       VerticalOptions="Start"
                       HorizontalOptions="End"
                       Margin="0, 15, 15, 10">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1"
                                              Tapped="Like_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <HorizontalStackLayout VerticalOptions="End"
                                       Spacing="10"
                                       Margin="10, 0, 0, 10"
                                       IsVisible="Collapse"
                                       Grid.Row="1">
                    <Image Source="copany_logo.png" 
                           WidthRequest="40" 
                           HeightRequest="40"/>
                    <Label Text="Korzinka.uz" 
                           TextColor="White" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
            <VerticalStackLayout Margin="10,10,0,0"
                                 Spacing="5"
                                 Grid.Row="1">
                <Label x:Name="companyName" 
                       Text="{Binding CompanyName}"
                       FontSize="18" 
                       FontAttributes="Bold"/>
                <Label x:Name="companyWorkingTime"
                       Text="{Binding WorkingTime}"
                       FontSize="14" 
                       TextColor="Black"/>
            </VerticalStackLayout>
            <HorizontalStackLayout Margin="10,15,0,0"
                                   Spacing="10"
                                   Grid.Row="2">
                <HorizontalStackLayout Spacing="5" IsVisible="Collapse">
                    <Image Source="star.png" 
                           WidthRequest="16" 
                           HeightRequest="16"/>
                    <Label x:Name="stars"  
                           Text="{Binding Stars}" 
                           FontSize="14"
                           VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                <BoxView BackgroundColor="LightGray"
                         IsVisible="Collapse"
                         WidthRequest="1"
                         HeightRequest="15"/>
                <HorizontalStackLayout Spacing="5">
                    <Image Source="distance.png" 
                           WidthRequest="16" 
                           HeightRequest="16"/>
                    <Label x:Name="distance" 
                           Text="{Binding Distance}"  
                           FontSize="14"
                           VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Grid>
    </Frame>

</ContentView>
