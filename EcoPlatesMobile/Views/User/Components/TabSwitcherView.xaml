<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.User.Components.TabSwitcherView">

        <Grid ColumnDefinitions="*, *"
            HeightRequest="50">
            <BoxView BackgroundColor="#E5E5E5"
                     CornerRadius ="5"
                     Grid.ColumnSpan="2"/>
            <Button x:Name="button1"
                    Text="{Binding Tab1_Title}"
                    FontSize="16"
                    BackgroundColor="White"
                    TextColor="Black"
                    BorderWidth="0"
                    HeightRequest="40"
                    Margin="5,0,0,0"
                    CornerRadius="3"
                    Clicked="OnTabClicked"/>
            <Button x:Name="button2"
                    Text="{Binding Tab2_Title}"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    TextColor="Gray"
                    BorderWidth="0"
                    HeightRequest="40"
                    Margin="0,0,5,0"
                    CornerRadius="3"
                    Clicked="OnTabClicked"
                    Grid.Column="1"/>
        </Grid>
</ContentView>
