<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.User.Components.TabSwitcherView">

    <Grid RowDefinitions="Auto" 
          ColumnDefinitions="*,*" 
          BackgroundColor="#EAEAEA"
          Padding="0" 
          HeightRequest="50">
        <BoxView x:Name="SelectionIndicator" 
                 BackgroundColor="White" 
                 CornerRadius="3"
                 HeightRequest="35"
                 WidthRequest="150"
                 VerticalOptions="EndAndExpand"
                 HorizontalOptions="Start"
                 TranslationX="5"/>
        
        <Label x:Name="TabSotuvchilar" 
               Text="Sotuvchilar" 
               VerticalOptions="End" 
               HorizontalOptions="Center"
               TextColor="Black"
               FontSize="16">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTabTapped" CommandParameter="Sotuvchilar"/>
            </Label.GestureRecognizers>
        </Label>
        <Label x:Name="TabMahsulotlar" 
               Text="Mahsulotlar" 
               VerticalOptions="End" 
               HorizontalOptions="Center"
               Grid.Column="1"
               TextColor="Gray"
               FontSize="16">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTabTapped" CommandParameter="Mahsulotlar"/>
            </Label.GestureRecognizers>
        </Label>
    </Grid>
</ContentView>
