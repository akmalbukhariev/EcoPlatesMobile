<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.User.Components.ProductView">

    <Frame Padding="0" 
           CornerRadius="20" 
           HeightRequest="270"
           HasShadow="True">
        <Grid RowDefinitions="Auto, Auto, Auto, Auto">
            <Grid ColumnDefinitions="*,*">
                <Image x:Name="productImage" 
                       Source="{Binding ProductImage}"
                       Aspect="AspectFill"
                       HeightRequest="135"
                       Grid.ColumnSpan="2"/>
                <Grid HeightRequest="35"
                      WidthRequest="75"
                      Margin="0,5,0,0"
                      IsVisible="False"
                      VerticalOptions="Start">
                    <Border BackgroundColor="Gray"
                            Opacity="0.35"
                            HeightRequest="30"
                            VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                    </Border>
                    <Label x:Name="productCount" 
                           Text="{Binding ProductCount}"
                           TextColor="Black"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalTextAlignment="Center"/>
                </Grid>
                <Image Source="like.png"
                       WidthRequest="30"
                       HeightRequest="30"
                       VerticalOptions="Start"
                       HorizontalOptions="End"
                       Margin="0, 10, 10, 0"
                       Grid.Column="1"/>
            </Grid>
            <VerticalStackLayout Margin="10,0,0,0"
                                 Spacing="0"
                                 Grid.Row="1">
                <Label x:Name="productName" 
                       Text="{Binding ProductName}" 
                       FontSize="18" 
                       FontAttributes="Bold"/>
                <Label x:Name="productMakerName" 
                       Text="{Binding ProductMakerName}" 
                       FontSize="14" 
                       TextColor="Black"/>
            </VerticalStackLayout>
            <VerticalStackLayout Margin="10,5,0,0"
                                 Spacing="0"
                                 Grid.Row="2">
                <Label x:Name="newPrice" 
                       Text="{Binding NewPrice}" 
                       FontSize="18" 
                       TextColor="Green"
                       FontAttributes="Bold"/>
                <Label x:Name="oldPrice" 
                       Text="{Binding OldPrice}" 
                       Margin="3,0,0,0"
                       TextDecorations="Strikethrough"
                       FontSize="16" 
                       TextColor="Gray"/>
            </VerticalStackLayout>
            <HorizontalStackLayout Margin="10,0,0,0"
                                   Spacing="10"
                                   Grid.Row="3">        
                <HorizontalStackLayout Spacing="5">
                    <Image Source="star.png" 
                           WidthRequest="16" 
                           HeightRequest="16"/>
                    <Label x:Name="stars" 
                           Text="{Binding Stars}"
                           FontSize="14"
                           VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                <BoxView BackgroundColor="LightGray"
                         WidthRequest="1"
                         HeightRequest="15"/>
                <HorizontalStackLayout Spacing="5">
                    <Image Source="distance.png" 
                           WidthRequest="16" 
                           HeightRequest="16"/>
                    <Label x:Name="distance" 
                           Text="{Binding Distance}" 
                           FontSize="14"
                           VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Grid>
    </Frame>
</ContentView>
