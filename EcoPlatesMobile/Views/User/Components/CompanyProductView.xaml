<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.User.Components.CompanyProductView">

    <Frame x:Name="mainFrame" 
           Padding="0"
           CornerRadius="10"
           HeightRequest="120"
           HasShadow="True">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="Product_Tapped" 
                                  NumberOfTapsRequired="1"/>
        </Frame.GestureRecognizers>
        <Grid ColumnDefinitions="Auto, *">
            <Image x:Name="productImage"
                   Aspect="AspectFill"
                   WidthRequest="170"/>
            <Grid RowDefinitions="Auto, Auto, Auto, Auto"
                  RowSpacing="8"
                  Margin="10,0,0,0"
                  VerticalOptions="Center" 
                  Grid.Column="1">
                <Grid.Resources>
                    <ResourceDictionary>
                        <Style x:Key="imStyle" TargetType="Image">
                            <Setter Property="Aspect" Value="AspectFit"/>
                            <Setter Property="WidthRequest" Value="15"/>
                            <Setter Property="HeightRequest" Value="15"/>
                        </Style>
                        <Style x:Key="lbStyle" TargetType="Label">
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="TextColor" Value="Black"/>
                            <Setter Property="Margin" Value="10,0,0,0"/>
                        </Style>
                    </ResourceDictionary>
                </Grid.Resources>
                <StackLayout Spacing="10" Orientation="Horizontal">
                    <Image Source="product.png"
                            Style="{StaticResource imStyle}"/>
                    <Label x:Name="productName"
                            LineBreakMode="TailTruncation"
                            TextColor="Green"
                            FontSize="16"
                            FontAttributes="Bold"
                            WidthRequest="130"/>
                </StackLayout>
                <Label x:Name="newPrice"
                       TextColor="Green"
                       FontSize="14"
                       FontAttributes="Bold"
                       Grid.Row="1"/>
                <Label x:Name="oldPrice"
                       TextColor="Gray"
                       TextDecorations="Strikethrough"
                       FontSize="12"
                       FontAttributes="Bold"
                       Grid.Row="2"/>
                <StackLayout Orientation="Horizontal" Grid.Row="3">
                    <Image Source="star.png"
                           Style="{StaticResource imStyle}"
                           Grid.Row="2"/>
                    <Label x:Name="stars" 
                           Text="{Binding Stars}"
                           Style="{StaticResource lbStyle}"/>
                </StackLayout>
            </Grid>
        </Grid>
    </Frame>
</ContentView>
