<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:language="clr-namespace:EcoPlatesMobile.Resources.Languages"
             x:Class="EcoPlatesMobile.Views.Components.ReviewView">

    <Border BackgroundColor="White" 
            VerticalOptions="Center"
            HorizontalOptions="Center"
            HeightRequest="400"
            WidthRequest="300"
            Padding="0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="0"/>
        </Border.StrokeShape>
        <Grid BackgroundColor="{StaticResource User}"
              RowDefinitions="*, 50">
            <Grid RowDefinitions="Auto, Auto, Auto, Auto, *">
                <Image Source="close_white.png"
                       Aspect="AspectFill"
                       WidthRequest="30"
                       Margin="0,10,10,0"
                       HorizontalOptions="End">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1"
                                              Tapped="Close_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="{x:Static language:AppResource.Review}"
                       FontSize="25"
                       TextColor="White"
                       FontFamily="RobotoVar"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10"
                       Grid.Row="1"/>
                <Label Text="{x:Static language:AppResource.PleaseWriteIt}"
                       FontSize="20"
                       TextColor="White"
                       FontFamily="RobotoVar"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10"
                       Grid.Row="2"/>
                <Label Text="{x:Static language:AppResource.HonestTitle}"
                       FontSize="14"
                       FontFamily="RobotoVar"
                       TextColor="White"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       WidthRequest="170"
                       Grid.Row="3"/>
                <Image Source="cell_phone.png"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"
                       VerticalOptions="End"
                       Grid.Row="4"/>
            </Grid>
            <Border x:Name="borderButton" 
                    BackgroundColor="White"
                    Grid.Row="1">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1"
                                          Tapped="Review_Tapped"/>
                </Border.GestureRecognizers>
                <Label Text="{x:Static language:AppResource.WriteProductReview}"
                       FontAttributes="Bold"
                       FontSize="17"
                       FontFamily="RobotoVar"
                       TextColor="{StaticResource User}"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
    
</ContentView>
