<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.Components.CustomEntry"
             xmlns:local="clr-namespace:EcoPlatesMobile.Views.Components"
             x:DataType="local:CustomEntry">

    <Border x:Name="borderContainer"
            StrokeThickness="2"
            Stroke="{Binding BorderColor}"
            BackgroundColor="{Binding EntryBackgroundColor}"
            Padding="8"
            HeightRequest="60">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="35"/>
        </Border.StrokeShape>

        <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">

            <Image x:Name="iconImage"
                   Source="{Binding IconSource}"
                   WidthRequest="25"
                   HeightRequest="25"
                   VerticalOptions="Center"
                   Margin="8,0"/>
            <Entry x:Name="customEntry"
                   Placeholder="{Binding EntryPlaceHolder}"
                   FontSize="16"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent"
                   TextColor="Black"
                   Grid.Column="1"/>
        </Grid>
    </Border>
</ContentView>
