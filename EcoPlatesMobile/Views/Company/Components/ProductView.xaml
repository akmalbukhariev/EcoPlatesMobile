<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoPlatesMobile.Views.Company.Components.ProductView">

    <Frame x:Name="mainFrame" 
           Padding="0"
           BackgroundColor="White"
           CornerRadius="15"
           HeightRequest="115"
           HasShadow="True">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="Product_Tapped" 
                                  NumberOfTapsRequired="1"/>
        </Frame.GestureRecognizers>
        <Grid ColumnDefinitions="Auto, *">
            <Image x:Name="productImage"
                   Aspect="AspectFill"
                   WidthRequest="150"/>
            <Grid RowDefinitions="Auto, 5, Auto, 5, Auto"
                  Margin="20,0,0,0"
                  VerticalOptions="Center" 
                  Grid.Column="1">
                  <VerticalStackLayout>
                        <Label x:Name="productName"
                               TextColor="Black"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Label x:Name="productCount" 
                               IsVisible="Collapse"
                               TextColor="Gray"
                               FontSize="12"
                               FontAttributes="Bold"/>
                  </VerticalStackLayout>
                  <VerticalStackLayout Grid.Row="2">
                        <Label x:Name="newPrice"
                               TextColor="Green"
                               FontSize="14"
                               FontAttributes="Bold"/>
                        <Label x:Name="oldPrice"
                               TextColor="Gray"
                               TextDecorations="Strikethrough"
                               FontSize="12"
                               FontAttributes="Bold"/>
                  </VerticalStackLayout>
                  <HorizontalStackLayout Margin="0,0,0,0"
                                         Spacing="10"
                                         Grid.Row="4">        
                        <HorizontalStackLayout Spacing="5">
                            <Image Source="star.png" 
                                   WidthRequest="16" 
                                   HeightRequest="16"/>
                            <Label x:Name="stars"
                                   FontSize="11"
                                   VerticalTextAlignment="Center"/>
                        </HorizontalStackLayout>
                        <BoxView BackgroundColor="LightGray"
                                 WidthRequest="1"
                                 HeightRequest="15"/>
                        <HorizontalStackLayout Spacing="5" IsVisible="Collapse">
                            <Image Source="distance.png" 
                                   WidthRequest="16" 
                                   HeightRequest="16"/>
                            <Label Text="579 m" 
                                   FontSize="11"
                                   VerticalTextAlignment="Center"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
            </Grid>
            <BoxView x:Name="boxViewBack"
                     BackgroundColor="Black"
                     Opacity="0.095"
                     Grid.ColumnSpan="2"/> 
        </Grid>
    </Frame>
</ContentView>
