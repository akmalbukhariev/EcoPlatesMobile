<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="EcoPlatesMobile.Views.Company.Components.PricePopup">

    <Grid BackgroundColor="Black" Opacity="0.4">

        <!-- Centered Popup Container -->
        <Border Stroke="LightGray" StrokeThickness="1" BackgroundColor="White"
                Padding="25" WidthRequest="320" HeightRequest="280"
                VerticalOptions="Center" HorizontalOptions="Center">

            <!-- Smooth Rounded Corners -->
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15"/>
            </Border.StrokeShape>

            <!-- Shadow Effect -->
            <Border.Shadow>
                <Shadow Brush="Black" Offset="5,5" Radius="15"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="20" WidthRequest="280">

                <!-- Title -->
                <Label Text="Enter Prices" FontSize="20" FontAttributes="Bold"
                       TextColor="Black" HorizontalOptions="Center"/>

                <!-- Old Price Input -->
                <VerticalStackLayout>
                    <Label Text="Old Price" FontSize="14" TextColor="Gray"/>
                    <Entry x:Name="OldPriceEntry" Placeholder="Enter old price" 
                           Keyboard="Numeric" BackgroundColor="#F5F5F5"
                           HeightRequest="45"/>
                </VerticalStackLayout>

                <!-- New Price Input -->
                <VerticalStackLayout>
                    <Label Text="New Price" FontSize="14" TextColor="Gray"/>
                    <Entry x:Name="NewPriceEntry" Placeholder="Enter new price" 
                           Keyboard="Numeric" BackgroundColor="#F5F5F5"
                           HeightRequest="45" />
                </VerticalStackLayout>

                <!-- Buttons -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Fill">
                    <Button Text="Cancel" BackgroundColor="LightGray" TextColor="Black"
                            HorizontalOptions="FillAndExpand" HeightRequest="45"
                            CornerRadius="10" Clicked="OnCancelClicked"/>
                    <Button Text="Save" BackgroundColor="#6200EA" TextColor="White"
                            HorizontalOptions="FillAndExpand" HeightRequest="45"
                            CornerRadius="10" Clicked="OnSaveClicked"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>
</toolkit:Popup>