<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="EcoPlatesMobile.Views.Company.Pages.CompanyProfileInfoPage"
               xmlns:component="clr-namespace:EcoPlatesMobile.Views.Components"
               xmlns:page="clr-namespace:EcoPlatesMobile.Views">
    
    <Grid>
        <ScrollView>
            <Grid RowDefinitions="Auto, 50, Auto, *, Auto, 20"
                  BackgroundColor="#EFEEF2">
                <VerticalStackLayout Spacing="20">
                    <Border x:Name="borderCompanyImage"
                            WidthRequest="150"
                            HeightRequest="150"
                            Stroke="Gray"
                            StrokeThickness="0.2"
                            Margin="0, 10, 0, 0"
                            StrokeShape="RoundRectangle 100"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                                Tapped="BorderImage_Tapped"/>
                        </Border.GestureRecognizers>
                        <Image x:Name="imCompany" 
                            Source="add_item.png"
                            Aspect="AspectFill" />
                    </Border>
                    <Button Text="Set New Photo"
                            TextColor="#8338EC"
                            FontSize="17"
                            FontAttributes="Bold"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            Clicked="ChangeImage_Clicked"/>
                    <Border StrokeShape="RoundRectangle 15"
                            StrokeThickness="0.2"
                            BackgroundColor="White"
                            Margin="10,0,10,0">
                        <Grid RowDefinitions="Auto, 1, Auto, 1, 50"
                            RowSpacing="10"
                            Margin="10">
                            <Entry x:Name="entryCompanyName" 
                                Placeholder="Company name"
                                FontSize="17"
                                PlaceholderColor="LightGray"/>
                            <BoxView BackgroundColor="LightGray" Grid.Row="1"/>
                            <Grid Grid.Row="2">
                                <Picker x:Name ="pickType"
                                        FontSize="17"
                                        SelectedIndexChanged="BusinessType_SelectedIndexChanged"/>
                                <Image Source="left.png"
                                       Aspect="AspectFit"
                                       HorizontalOptions="End"
                                       Margin="0,0,10,0"/>
                            </Grid>
                            <BoxView BackgroundColor="LightGray" Grid.Row="3"/>
                            <Grid x:Name="grdPhoneNumber" 
                                ColumnDefinitions="Auto, *, Auto" 
                                Grid.Row="4">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1"
                                                        Tapped="PhoneNumber_Tapped"/>
                                </Grid.GestureRecognizers>
                                <Label Text="Change Number"
                                    TextColor="Black"
                                    FontSize="17"
                                    HorizontalTextAlignment="Start"
                                    VerticalTextAlignment="Center"/>
                                <Label x:Name="lbPhoneNUmber" 
                                    Text="+998 00 000 00 00"
                                    TextColor="Gray"
                                    FontSize="17"
                                    HorizontalTextAlignment="End"
                                    VerticalTextAlignment="Center"
                                    Grid.Column="1"/>
                                <Image Source="left.png"
                                    Aspect="AspectFit"
                                    Margin="15,0,10,0"
                                    Grid.Column="2"/>
                            </Grid>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
                <Border StrokeShape="RoundRectangle 15"
                        StrokeThickness="0.2"
                        BackgroundColor="White"
                        Margin="10,0,10,0"
                        Grid.Row="2">
                    <StackLayout VerticalOptions="Center"
                                Spacing="0">
                            <Grid ColumnDefinitions="Auto, *, Auto"
                                Margin="20,0,20,5"
                                VerticalOptions="Center">
                                <Image Source="time_start.png"
                                        WidthRequest="20"
                                        HeightRequest="20"
                                        Margin="0,0, 10,0"
                                        VerticalOptions="Center"/>
                                <TimePicker x:Name="startTimePicker"
                                            FontSize="17"
                                            HorizontalOptions="Start" 
                                            Grid.Column="1"/>
                                <Label x:Name="startDateTimeLabel"
                                        Text="Ish boshlash vaqti"
                                        VerticalTextAlignment="Center"
                                        FontSize="17"
                                        TextColor="Gray"
                                        Margin="0,0,10,0"
                                        Grid.Column="3"/>
                            </Grid>
                            <Border BackgroundColor="#E9E9E9" 
                                    HeightRequest="2"
                                    Margin="10,0,10,0"
                                    Grid.Row="1"/>
                            <Grid ColumnDefinitions="Auto, *, Auto"
                                  Margin="20,5,20,0">
                                <Image Source="time_end.png"
                                    WidthRequest="20"
                                    HeightRequest="20"
                                    Margin="0,0, 10,0"
                                    VerticalOptions="Center"/>
                                <TimePicker x:Name="endTimePicker"
                                            HorizontalOptions="Start"
                                            FontSize="17"
                                            Grid.Column="1"/>
                                <Label x:Name="endTimeLabel" 
                                       Text="Ish tugashi vaqti"
                                       FontSize="17"
                                       TextColor="Gray"
                                       VerticalTextAlignment="Center"
                                       Margin="0,0,10,0"
                                       Grid.Column="2"/>
                            </Grid>
                    </StackLayout>
                </Border>
                <Button Text="Log Out" 
                        BackgroundColor="Red"
                        TextColor="White"
                        Margin="10,0,10,0"
                        Grid.Row="4"/>
            </Grid>
        </ScrollView>
        <Grid ColumnDefinitions="Auto, *, Auto"
              VerticalOptions="Start">
            <Button Text="Cancel"
                    TextColor="#8338EC"
                    FontSize="17"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    Clicked="Cancel_Clicked"/>
            <Button Text="Done"
                    TextColor="#8338EC"
                    FontSize="17"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    Clicked="Done_Clicked"
                    Grid.Column="2"/>
        </Grid>
        <BoxView x:Name="boxFullImage"
                BackgroundColor="Black"
                IsVisible="False"
                Opacity="0.7"/>
        <Image x:Name="fullImage"
               Aspect="AspectFit"
               IsVisible="False">
            <Image.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Up"
                                        Swiped="OnImage_Swiped"/>
                <TapGestureRecognizer NumberOfTapsRequired="1"
                                    Tapped="OnImage_Tapped"/>
            </Image.GestureRecognizers>
        </Image>
        <component:LoadingView x:Name="loading"/>
    </Grid>

</page:BasePage>