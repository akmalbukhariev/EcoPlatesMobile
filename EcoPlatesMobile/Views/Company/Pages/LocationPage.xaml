<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:page="clr-namespace:EcoPlatesMobile.Views"
               xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
               xmlns:component="clr-namespace:EcoPlatesMobile.Views.Components"
               x:Class="EcoPlatesMobile.Views.Company.Pages.LocationPage">

    <Grid RowDefinitions="Auto, *, Auto, 40">
        <!--<component:CustomHeader ShowBack="True"
                                IsVisible="Collapse"
                                HeaderBackground="#8338EC"
                                Title="Setting current location"/>-->
        <Grid ColumnDefinitions="Auto, *, Auto"
              BackgroundColor="#8338EC"
              HeightRequest="60">
            <Image x:Name="imBack" 
                   Source="back.png"
                   WidthRequest="24"
                   HeightRequest="24"
                   Margin="16, 4.44, 0, 0">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Back_Tapped"
                                          NumberOfTapsRequired="1"/>
                </Image.GestureRecognizers>
            </Image>
            <Label x:Name="lbTitle"
                   Text="Setting current location"
                   FontFamily="Roboto"
                   TextColor="White"
                   FontSize="18"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   Margin="15,0,0,0"
                   Grid.Column="1"/>
            <Image x:Name="imSave" 
                   Source="save_location.png"
                   WidthRequest="30"
                   HeightRequest="30"
                   Margin="0, 4.44, 20, 0"
                   Grid.Column="2">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Save_Tapped"
                                          NumberOfTapsRequired="1"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
        <maps:Map x:Name="map" 
                  MapType="Street"
                  IsShowingUser="true"
                  Grid.Row="1"
                  Grid.RowSpan="3"/>
        <Image Source="location.png"
                WidthRequest="40"
                HeightRequest="40"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Row="1"
                Grid.RowSpan="2"
                InputTransparent="True" />
        <!--<Button Text="Save"
                IsVisible="Collapse"
                BackgroundColor="#8338EC"
                TextColor="White"
                Margin="10,0,10,0"
                HeightRequest="50"
                Clicked="Save_Clicked"
                Grid.Row="2"/>-->
        <component:LoadingView x:Name="loading"
                               Grid.RowSpan="4"/>
    </Grid>
    
</page:BasePage>