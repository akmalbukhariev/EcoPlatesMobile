<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="EcoPlatesMobile.Views.Company.Pages.NonActiveProductPage"
               xmlns:component="clr-namespace:EcoPlatesMobile.Views.Components"
               xmlns:page="clr-namespace:EcoPlatesMobile.Views"
               xmlns:com_component="clr-namespace:EcoPlatesMobile.Views.Company.Components"
               xmlns:local="clr-namespace:EcoPlatesMobile.Views.Company.Pages"
               BackgroundColor="#F7F9FB">
   
    <Grid RowDefinitions="Auto, *, Auto">
        <component:CustomHeader x:Name="header" 
                                Title="Activ bo'lmagan maxsulotlar"
                                ShowBack="False"
                                HeaderBackground="#8338EC"/>
        <Grid RowDefinitions="Auto, *"
              Margin="16,20,16,10"
              Grid.Row="1">
            <Label Text="{Binding ActiveProductCount}"
                   TextColor="Black"
                   FontAttributes="Bold"
                   Margin="0,0,0,20"
                   FontSize="15"/>
            <RefreshView x:Name="listProduct" 
                         IsRefreshing="{Binding IsRefreshing}"
                         Command="{Binding RefreshCommand}"
                         Margin="10"
                         Grid.Row="1">
                <CollectionView ItemsSource="{Binding Products}"
                                RemainingItemsThreshold="1"
                                RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" 
                                         VerticalItemSpacing="10"
                                         HorizontalItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Delete"
                                                   BackgroundColor="Red"
                                                   Invoked="DeleteProduct_Invoked"/>
                                        <SwipeItem Text="Active"
                                                   BackgroundColor="Green"
                                                   Invoked="ActiveProduct_Invoked"/>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                <com_component:ProductView ProductImage="{Binding ProductImage}"
                                                           ProductName="{Binding ProductName}"
                                                           NewPrice="{Binding NewPrice}"
                                                           OldPrice="{Binding OldPrice}"
                                                           Stars="{Binding Stars}"
                                                           ClickCommand="{Binding Source={RelativeSource AncestorType={x:Type local:NonActiveProductPage}}, Path=BindingContext.ClickProductCommand}"
                                                           IsNonActiveProduct="False"/>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>
        <ActivityIndicator IsRunning="{Binding IsLoading}"
                           Color="Green"
                           Scale="1.5"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Grid.RowSpan="2"/>
        <BoxView Grid.Row="2"
                 HeightRequest="1"
                 BackgroundColor="LightGray"
                 HorizontalOptions="Fill" />
    </Grid>
</page:BasePage>