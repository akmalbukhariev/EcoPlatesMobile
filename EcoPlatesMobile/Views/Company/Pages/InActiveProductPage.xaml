<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="EcoPlatesMobile.Views.Company.Pages.InActiveProductPage"
               xmlns:component="clr-namespace:EcoPlatesMobile.Views.Components"
               xmlns:page="clr-namespace:EcoPlatesMobile.Views"
               xmlns:com_component="clr-namespace:EcoPlatesMobile.Views.Company.Components"
               xmlns:language="clr-namespace:EcoPlatesMobile.Resources.Languages"
               xmlns:local="clr-namespace:EcoPlatesMobile.Views.Company.Pages"
               BackgroundColor="#F7F9FB">
   
    <Grid RowDefinitions="Auto, *, Auto">
        <component:CustomHeader x:Name="header"
                                Title="{x:Static language:AppResource.InactiveProducts}"
                                ShowBack="False"
                                HeaderBackground="{StaticResource Company}"/>
        <Grid RowDefinitions="Auto, *"
              Margin="16,20,16,10"
              Grid.Row="1">
            <Grid ColumnDefinitions="*, Auto"
                  Margin="10,0,0,0">
              <Label Text="{Binding InActiveProductCount}" IsVisible="False"
                     TextColor="Black"
                     FontFamily="RobotoVar"
                     VerticalTextAlignment="Center"
                     FontSize="15"/>
              <HorizontalStackLayout x:Name="selectAllBar"
                                     VerticalOptions="Center"
                                     IsVisible="{Binding IsShowChekAllProducts}"
                                     HorizontalOptions="Start">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="StSelectAllProductTapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Label Text="Select all"
                           FontSize="15"
                           FontFamily="RobotoVar"
                           TextColor="Black"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <CheckBox x:Name="checkAllProducts"
                              IsChecked="{Binding IsCheckedAllProduct}"
                              Color="{StaticResource Company}"
                              CheckedChanged="CheckAllProduct_CheckedChanged"/>
              </HorizontalStackLayout>
              <HorizontalStackLayout VerticalOptions="Center"
                                       IsVisible="{Binding IsShowChekProduct}"
                                       Grid.Column="1">
                     <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="StCheckProductTapped"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Label Text="Select"
                           FontSize="15"
                           FontFamily="RobotoVar"
                           TextColor="Black"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <CheckBox x:Name="checkProduct"
                              IsChecked="{Binding IsCheckedProduct}"
                              Color="{StaticResource Company}"
                              CheckedChanged="CheckProduct_CheckedChanged"/>
                </HorizontalStackLayout>
            </Grid>
            <RefreshView x:Name="listProduct"
                         IsRefreshing="{Binding IsRefreshing}"
                         Command="{Binding RefreshCommand}"
                         Margin="10"
                         Grid.Row="1">
                <CollectionView ItemsSource="{Binding Products}"
                                RemainingItemsThreshold="1"
                                RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" 
                                         VerticalItemSpacing="10"
                                         HorizontalItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView  SwipeStarted="OnRowSwipe">
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="{x:Static language:AppResource.Delete}"
                                                   BackgroundColor="Red"
                                                   Invoked="DeleteProduct_Invoked"/>
                                        <SwipeItem Text="{x:Static language:AppResource.Active}"
                                                   BackgroundColor="{StaticResource User}"
                                                   Invoked="ActiveProduct_Invoked"/>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                <com_component:ProductView ProductImage="{Binding ProductImage}"
                                                           ProductName="{Binding ProductName}"
                                                           NewPrice="{Binding NewPrice}"
                                                           OldPrice="{Binding OldPrice}"
                                                           Stars="{Binding Stars}"
                                                           ClickCommand="{Binding Source={RelativeSource AncestorType={x:Type local:InActiveProductPage}}, Path=BindingContext.ClickProductCommand}"
                                                           IsNonActiveProduct="{Binding IsNonActiveProduct}"
                                                           ShowCheckProduct="{Binding ShowCheckProduct}"
                                                           IsCheckedProduct="{Binding IsCheckedProduct}"/>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
            <VerticalStackLayout x:Name="stackBottom" 
                                 IsEnabled="{Binding StackBottomEnabled}"
                                 Spacing="20"
                                 VerticalOptions="End"
                                 HorizontalOptions="End"
                                 Margin="0,0,0,30"
                                 Opacity="1"
                                 IsVisible="False"
                                 TranslationX="60"
                                 Grid.RowSpan="2">
                <Image x:Name="imActive"
                       Source="{Binding ActiveImage}"
                       WidthRequest="40"
                       HeightRequest="40">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ActiveAll_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image x:Name="imDelete"
                       Source="{Binding DeleteImage}"
                       WidthRequest="40"
                       HeightRequest="40"
                       Margin="0,0,10,0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="DeleteAll_Tapped"/>
                    </Image.GestureRecognizers>
                </Image>
            </VerticalStackLayout>
        </Grid>
        <ActivityIndicator IsRunning="{Binding IsLoading}"
                           Color="{StaticResource Company}"
                           Scale="1.5"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Grid.RowSpan="2"/>
        <BoxView HeightRequest="1"
                 BackgroundColor="LightGray"
                 HorizontalOptions="Fill"
                 Grid.Row="2"/>
    </Grid>
</page:BasePage>