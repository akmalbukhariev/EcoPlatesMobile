<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="EcoPlatesMobile.Views.PhoneNumberNewPage"
               xmlns:page="clr-namespace:EcoPlatesMobile.Views">

    <Grid RowDefinitions="60, *">
        <Image x:Name="imBack" 
               Source="back2.png"
               WidthRequest="24"
               HeightRequest="24"
               HorizontalOptions="Start"
               Margin="16, 10, 0, 0">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="Back_Tapped"
                                      NumberOfTapsRequired="1"/>
            </Image.GestureRecognizers>
        </Image>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="24" 
                             Spacing="20" 
                             VerticalOptions="CenterAndExpand">
                <Image Source="phone_office.png" 
                   HeightRequest="80" 
                   HorizontalOptions="Center" />
                <Label Text="New Number"
                   FontSize="24"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="Black" />
                <Label Text="Your new number will receive a confirmation code via SMS."
                   FontSize="14"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="Gray"
                   Margin="0,-10,0,20" />
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" VerticalOptions="Center">
                    <Label Text="+82" FontSize="18" VerticalOptions="Center" />
                    <Entry x:Name="phoneEntry"
                       Placeholder="0 0000 0000"
                       FontSize="18"
                       Keyboard="Telephone"
                       Margin="10,0,0,0"
                       PlaceholderColor="LightGray"
                       HorizontalOptions="Fill"
                       VerticalOptions="Center"
                       Completed="PhoneEntry_Completed"
                       Grid.Column="1"/>
                </Grid>
                <Button Text="Continue"
                    FontSize="16"
                    CornerRadius="8"
                    BackgroundColor="#e0e0e0"
                    TextColor="Gray"
                    IsEnabled="False"
                    x:Name="ContinueButton" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
     
</page:BasePage>